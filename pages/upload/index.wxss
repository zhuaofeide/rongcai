.wrapper-index{
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}
.index-item{
  display: flex;
  background-color: #fff;
  margin-bottom:50rpx; 
  padding: 40rpx 30rpx;
  border-radius:15rpx; 
}
.item-left{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-right:30rpx; 
}
.item-img{
  width: 50px; 
  height: 50px;
}
.item-right{
    display: flex;
    flex: 1 0 auto;
    flex-direction: column;
    justify-content: space-between
}
.entery-text{
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333333 ;
}
.notice-text{
   font-size: 28rpx;
  line-height: 48rpx;
  color: #999999;
}