/* pages/baseInfor/baseInfor.wxss */
.baseInfor{
  background: #fff;
}
.base-header{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}
.header-avator{
  position: relative;
}
.avator-1{
  width: 180rpx;
  height: 180rpx;
  border-radius:50%; 
}
.avator-2{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: 10rpx;
  right: 0;
}
/* 主体 */
.base-item{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom:1px solid #eee; 
}
.base-title{
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333;
  min-width: 150rpx;
  text-align:justify;
  text-align-last:justify;
  margin-right:10rpx;
}
.right-name{
  padding-right:30rpx; 
}
.base-name,.picker{
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333;
}
.base-action{
  display: flex;
  /* align-items: flex-end */
}
.right-icon{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.action-img{
  width: 20rpx;
  height: 30rpx;
  margin-left:10rpx; 
}
.phone{
   min-width: 280rpx; 
   text-align: right;
   padding-right: 30rpx;
}

  .entery-btn{
    padding: 80rpx 20rpx ;
  }
  .btn-click{
    background-color: #349FEC;
    color: #fff;
    border-radius:30px; 
     font-size:36rpx;
  }
  .button-hover {
  background-color: #1c95ec;
}