<view class='des-wrapper'>
<form bindsubmit="bindFormSubmit">   
    <view class='des-content'>
        <view class='des-text'>
            <textarea class='des-area' value='{{text}}'  name="textarea" maxlength='100' bindinput='textLentgh'
            placeholder="请详细描述你的职责范围、工作任务等" auto-focus />
        </view> 
        <view class='des-counter'>
          <text>{{txtLeng}}</text>/<text>100</text>
        </view>
    </view>
    <view class='des-btn'>
      <button class="btn-click"form-type="submit"> 保存 </button>
    </view>
 </form>   
</view>
